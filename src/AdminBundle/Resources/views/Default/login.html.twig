{% extends "AdminBundle::layout_admin.html.twig" %}

{% block title %}{{ parent() }} - Connexion{% endblock %}

{% block body %}
	<div class="container-fluid">

		<div class="row" style="background-color: black;">
			<img class="img-responsive center-block" src="{{ asset('images/logo.png') }}" alt="logo" style="padding: 10px;">
		</div>
		{{ form_start(form, {'attr': {'class': 'form-horizontal', 'style' : 'margin-top:10px;color:black;', 'novalidate' : 'novalidate'}}) }}
	  	{# Génération du label + error + widget pour un champ. #}

	  	<div class="form-group">
	  		{# Les erreurs générales du formulaire. #}
		 	{% if essai == true and nb_essai == 1 %}
		 		<span class="help-block" style="text-align: center;">    
		 			<ul class="list-unstyled">
		 				<li>
		 					<span class="glyphicon glyphicon-exclamation-sign"></span>Mauvais nom d'utilisateur/mot de passe.
		 				</li>
		 			</ul>
	    		</span>
		 	{% endif %}
	  		<h2 style="margin: 20px;text-align: center;text-transform: capitalize;">Connexion Admin : </h2>
		    {# Génération du label. #}
		    {{ form_label(form.login, "Login : ", {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
		    <div class="col-sm-2">
			    {# Génération de l'input. #}
			    {{ form_widget(form.login, {'attr': {'class': 'form-control'}}) }}
			    {# Affichage des erreurs pour ce champ précis. #}
			    {{ form_errors(form.login) }}
		    </div>
	  	</div>

	  	<div class="form-group">
		    {{ form_label(form.password, "Mot de passe : ", {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
		    <div class="col-sm-2">
		      {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
		      {{ form_errors(form.password) }}
		    </div>
	  	</div>
	  	{{ form_widget(form.save, {'attr': {'class': 'btn btn-default center-block'}}) }}
	  	{{ form_end(form) }}
	</div>
{% endblock %}